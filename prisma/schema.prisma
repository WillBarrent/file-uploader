generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  username String
  password String
  folders  Folder[]
}

model Folder {
  id     Int    @id @default(autoincrement())
  name   String @unique
  path   String 
  files  File[]
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model File {
  id           Int      @id @default(autoincrement())
  fileName     String
  originalName String
  path         String
  size         Int
  uploadTime   DateTime
  folder       Folder   @relation(fields: [folderId], references: [id])
  folderId     Int
}
